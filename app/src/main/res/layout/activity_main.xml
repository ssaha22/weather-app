<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/temperatureUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/temperature"
        android:layout_marginBottom="-40dp"
        android:layout_toEndOf="@id/temperature"
        android:text="@string/celsius_symbol"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/location"
        android:text="20"
        android:textSize="72sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/weatherCondition"
        android:text="Vancouver"
        android:textSize="48sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/weatherCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Rain"
        android:textSize="32sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/weatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherCondition"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/weather_icons"
        android:text="@string/wi_owm_300"
        android:textSize="100sp"
        android:textColor="@color/white"/>

</RelativeLayout>